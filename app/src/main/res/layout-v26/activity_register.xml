<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/judul_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_marginTop="90dp"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/username_reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/judul_register"
        android:layout_marginTop="50dp"
        android:hint="nama"
        android:inputType="textPersonName"
        android:textSize="20sp" />


    <EditText
        android:id="@+id/email_reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username_reg"
        android:layout_marginTop="15dp"
        android:inputType="textEmailAddress"
        android:hint="email"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/password_reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_reg"
        android:layout_marginTop="15dp"
        android:hint="password"
        android:inputType="textPassword"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/conf_password_reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_reg"
        android:layout_marginTop="15dp"
        android:hint="konfirmasi password"
        android:inputType="textPassword"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_daftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/conf_password_reg"
        android:background="#FFF73838"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/btn_kembali_reg"
        android:textAllCaps="false"
        android:layout_marginTop="90dp"
        android:text="Daftar"/>

    <Button
        android:id="@+id/btn_kembali_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/conf_password_reg"
        android:background="#FFF73838"
        android:layout_marginLeft="100dp"
        android:textAllCaps="false"
        android:layout_marginTop="90dp"
        android:text="Kembali"/>

</RelativeLayout>